  <%- include('includes/header') %>
  
  <div class="container py-md-5 container--narrow">
    <%- include('includes/flash') %>
    <div class="d-flex justify-content-between">
      <h2><%= post.title %></h2>
      <% if (post.isVisitorOwner) { %>
      <span class="pt-2">
        <a 
          href="/post/<%= post._id %>/edit" 
          class="text-primary mr-2" 
          data-toggle="tooltip" 
          data-placement="top" 
          title="Edit"
        >
          <i class="fas fa-edit edit-post-icon"></i>
        </a>
        <form class="delete-post-form d-inline" action="/post/<%= post._id %>/delete" method="POST">
          <button 
            class="delete-post-button text-danger" 
            data-toggle="tooltip" 
            data-placement="top" 
            title="Delete"
          >
            <i class="fas fa-trash delete-post-icon"></i>
          </button>
        </form>
      </span>
     <% } %>
    </div>
      
    <p class="text-muted mb-4">
      Posted by <a href="#"><%= post.author.username %></a> on <%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getDate() %>/<%= post.createdDate.getFullYear() %>
    </p>

    <div class="body-content">
      <%- filterUserHTML(post.body) %>
    </div>
  </div>
  
  <%- include('includes/footer') %>