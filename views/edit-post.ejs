<%- include('includes/header') %>
  
<div class="container py-md-5 container--narrow">
  <%- include('includes/flash') %>
  <form action="/post/<%= post._id %>/edit" method="POST">
    <div class="form-group">
      <label for="post-title" class="mb-1">Title</label>
      <input required name="title" value="<%= post.title %>" id="post-title" class="form-control form-control-title" type="text" autocomplete="off">
    </div>

    <div class="form-group">
      <label for="post-body" class="mb-1">Post</label>
      <textarea required name="body" id="post-body" class="body-content tall-textarea form-control" type="text"><%= post.body %></textarea>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button class="btn btn-primary mb-2">Save Updates</button>
  </form>
  <a class="font-weight-bold text-secondary" href="/post/<%= post._id %>"><i class="fas fa-angle-double-left"></i> Back</a>
</div>

<%- include('includes/footer') %>